<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="menuContainer" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="program.chatus.MessageContextMenuController"
      style="-fx-background-color: white; -fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-border-radius: 4; -fx-background-radius: 4;">
    <Button fx:id="replyButton" text="Reply" style="-fx-background-color: white; -fx-text-fill: black; -fx-font-size: 14; -fx-padding: 8 16; -fx-min-width: 120; -fx-alignment: CENTER-LEFT;"/>
    <Button fx:id="forwardButton" text="Forward" style="-fx-background-color: white; -fx-text-fill: black; -fx-font-size: 14; -fx-padding: 8 16; -fx-min-width: 120; -fx-alignment: CENTER-LEFT;"/>
    <Button fx:id="copyButton" text="Copy" style="-fx-background-color: white; -fx-text-fill: black; -fx-font-size: 14; -fx-padding: 8 16; -fx-min-width: 120; -fx-alignment: CENTER-LEFT;"/>
    <Button fx:id="deleteButton" text="Delete" style="-fx-background-color: white; -fx-text-fill: #ff4444; -fx-font-size: 14; -fx-padding: 8 16; -fx-min-width: 120; -fx-alignment: CENTER-LEFT;"/>
</VBox>
